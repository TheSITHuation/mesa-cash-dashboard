{
  "hosting": {
    "public": "public",        // apunta a la carpeta donde realmente est√°n index.html, admin.html y assets/
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/admin.html",  "destination": "/admin.html" },
      { "source": "/index.html",  "destination": "/index.html" },
      { "source": "**",           "destination": "/index.html" }
    ]
  }
}
